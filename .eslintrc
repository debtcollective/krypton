{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true,
  },
  "plugins" : [
    "mocha"
  ],
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    # "ecmaFeatures": {
    #   "modules": true,
    # }
  },
  "rules" : {
    "new-cap": [
      1,
      {
        "capIsNewExceptions": [
          "Class",
          "Module",
          "Interfase",
          "RouteMappings",
          "Knex"
        ]
      }
    ],
    "mocha/no-exclusive-tests": [
      0,
      {},
    ],
    "no-param-reassign": [
      0,
      {},
    ],
    "no-underscore-dangle": [
      0,
      {},
    ],
    "global-require": [
      0
    ],
    "arrow-body-style": [
      1,
      "always"
    ]
  }
}
